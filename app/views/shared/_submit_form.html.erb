<div class="row m-4"></div>
<div class="container">
    <div class="border shadow row" style="padding: 1em;">
        <div class="col-7">
            <h5>申し込みフォーム</h5>
        </div>
        <div class="col-5"> </div>
            <div class="col-5">
                <%= text_field_tag :business_name, "", {class: "form-control", style: "margin-bottom:1em;", placeholder: "御社名をご記入ください",required: true}  %>
                <%= email_field_tag :email, "", {class: "form-control",placeholder: "メールアドレスをご記入ください",required: true}  %>
            </div>
            <div id="select-payment-type" class="col-md-2">
                <div class="row">
                    <%= label :payment_type, '1ヶ月契約' %>
                    <%= check_box_tag :payment_type,"credit_discount_month_price", false, {id: "one_month",class: "payment_type", multiple:false} %>
                </div>
                <div class="row">
                    <%= label :payment_type, '半年契約' %>
                    <%= check_box_tag :payment_type,"price_half_year",false, {id: "half_year",class: "payment_type", multiple:false} %>
                </div>
                <div class="row">
                    <%= label :payment_type, '１年契約' %>
                    <%= check_box_tag :payment_type,"price_one_year",false, {id: "one_year",class: "payment_type", multiple:false} %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="terms_box">
                    <%= check_box_tag :terms, "price_one_year",false, {required: true} %>
                    <label id="terms-label" for="terms" style="font-size:12px;">
                        <% if current_page?(root_path) || current_page?(rental_plans_path) %>
                            <a href="https://meo.tryhatch.co.jp/kiyakumatome/meocheki" target="_blank" rel="noopener noreferrer">利用規約</a>
                        <% elsif current_page?(meo_path) %>
                            <a href="https://meo.tryhatch.co.jp/kiyakumatome/riyoukiyaku" target="_blank" rel="noopener noreferrer">利用規約</a>
                        <% elsif current_page?(hosikakutokun_path) %>
                            <a href="https://meo.tryhatch.co.jp/kiyakumatome/hoshikakutokun" target="_blank" rel="noopener noreferrer">利用規約</a>
                        <% end %>
                        に同意する</label>
                </div>
            </div>
            <div class="col-md-3">
                <div>
                    <%= submit_tag "見積書ダウンロード", {name: "download", style: "margin-bottom:1em;",class: "btn btn-success"} %><br>
                    <%= submit_tag "申し込む", {name: "contract", class: "btn btn-success"} %>
                </div>
            </div>
        </div>
    </div>
</div>