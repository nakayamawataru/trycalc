        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="<%= root_path %>">MEOチェキ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="<%= rental_plans_path %>">レンタルプラン</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="<%= meo_path %>">MEO対策</a>
