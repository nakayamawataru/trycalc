<div class="page-title-lv1 col-md-12">
	<span>
	<h1 style="margin-left:8rem;">お見積り内容のご確認</h1>
  <p style="margin-left:8rem;">・以下の内容でお見積り書を作成いたします</p>
  <p style="margin-left:8rem;"></p>
	</span>
</div>
<div class="" style="background-color: #F5F7F8;">
	<div class="container inquiry-form">
    <div class="row">
			<div class="col-md-12 inquiry-box" >
        <%= form_for @signup, url: {controller: 'download_pdf', action: 'generate_quotation' } do |f| %>
          <table class="table">
          <tr>
            <th>お見積りさせていただくサービス</th>
            <%= hidden_field_tag :service, @service %>
            <td style="text-align: left;"><%= @service %></td>
          </tr>
          <% if @plan.present? %>
          <tr>
            <th>お見積りさせていただくプラン</th>
            <%= hidden_field_tag :plan, @plan %>
            <td style="text-align: left;"> <%= @plan %></td>
          </tr>
          <% end %>
          <% if @number_of_business.present? %>
          <tr>
            <th>お見積りさせていただく店舗数</th>
            <%= hidden_field_tag :number_of_business, @number_of_business %>
            <td style="text-align: left;"> <%= @number_of_business %></td>
          </tr>
          <% end %>
          <% if @keywords.present? %>
          <tr>
            <th>お見積りさせていただくキーワード数（順位取得用）</th>
            <%= hidden_field_tag :keywords, @keywords %>
            <td style="text-align: left;"> <%= @keywords %></td>
          </tr>
          <% end %>
          <% if @feature.present? %>
          <tr>
            <th>お見積りさせていただく機能</th>
            <%= hidden_field_tag :feature, @feature %>
            <td style="text-align: left; list-style: none"> <%= @feature.html_safe %></td>
          </tr>
          <% end %>

            <tr>
              <th>会社名</th>
              <td style="text-align: left;">
              <%= f.hidden_field :company_name %>
                <%= @signup.company_name %>
              </td>
            </tr>
            <tr>
              <th>部署名</th>
              <td style="text-align: left;">
                <%= f.hidden_field :department %>
                <%= @signup.department %>
              </td>
            </tr>
            <tr>
              <th>ご担当者様のお名前</th>
              <td style="text-align: left;">
                <%= f.hidden_field :name %>
                <%= @signup.name %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td style="text-align: left;">
                <%= f.hidden_field :email %>
                <%= @signup.email %>
              </td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td style="text-align: left;">
                <%= f.hidden_field :phone_number %>
                <%= @signup.phone_number %>
              </td>
            </tr>
          </table>

          <%= hidden_field_tag :service, @service %>
					<%= hidden_field_tag :plan, @plan %>
					<%= hidden_field_tag :number_of_business, @number_of_business %>
					<%= hidden_field_tag :keywords, @keywords %>
					<%= hidden_field_tag :feature, @feature %>
					<%= hidden_field_tag :init_price, @init_price %>
					<%= hidden_field_tag :price_for_options, @price_for_options %>
					<%= hidden_field_tag :first_month_price, @first_month_price %>
					<%= hidden_field_tag :monthly_price, @monthly_price %>
          <div class="center">
            <%= f.submit '送信', :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>