					<td style="text-align:left; border: 1px solid black;">クチコミ促進パック</td><%# 品目 %>
					<td style="text-align:right; border: 1px solid black;">1</td> <%# 数量 %>
					<td style="text-align:right; border: 1px solid black;">
						<%= number_to_currency(@price_for_review_package, :format => "%u%n", :unit => "", strip_insignificant_zeros: true) %>
					</td>
					<td style="text-align:right; border: 1px solid black;">
						<%= number_to_currency(@price_for_review_package, :format => "%u%n", :unit => "", strip_insignificant_zeros: true) %>
					</td>
				</tr>
				<% end %>
				<% if @price_for_support.present? %>
